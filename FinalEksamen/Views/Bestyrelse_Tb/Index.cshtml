@model IEnumerable<FinalEksamen.Bestyrelse_Tb>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid panel">
    <h2>Medlemer Liste</h2>

    <p>
        @Html.ActionLink("Opret ny", "Create","",new {@class="MyLink" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedlemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedlemBeskrivelse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedlemImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BestyrelseRole.MedlemRole)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MedlemName)
                </td>
                <td style="width:300px">
                    @Html.DisplayFor(modelItem => item.MedlemBeskrivelse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.MedlemImg)*@
                    <img src="~/Content/MedlemerImg/@item.MedlemImg" height="200" alt="Alternate Text"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BestyrelseRole.MedlemRole)
                </td>
                <td>
                    @Html.ActionLink("rediger", "Edit", new { id = item.Id }, new { @class = "MyLink" }) |
                    @*@Html.ActionLink("Detalje", "Details", new { id = item.Id }, new { @class = "MyLink" }) |*@
                    @Html.ActionLink("Slet", "Delete", new { id = item.Id }, new { @class = "MyLink" })
                </td>
            </tr>
        }

    </table>
</div>