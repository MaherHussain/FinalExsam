@model IEnumerable<FinalEksamen.UserTb>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Bruger Liste</h2>

    <p>
        @Html.ActionLink("Opret Ny User", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Salt)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.RoleTb.Role)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Salt)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.RoleTb.Role)
                </td>
                <td>
                    @Html.ActionLink("Rediger", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalje", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Slet", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>