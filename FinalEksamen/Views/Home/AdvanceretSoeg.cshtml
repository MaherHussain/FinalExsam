<div class="container bg-light text-dark mt-3 pt-2">
    <div class="row">
        <div class="col-4">
            <h2>Advanceret Søg</h2>
            <form action="/Home/AdvanceretSoeg" method="post">

                <div class="form-group">
                    <h4>Løbs Navn</h4>
                    <input class="form-control" type="text" id="Soegetxt" name="soegetxt" value="" />
                </div>
                <div class="form-group">
                    <h4>Pris fra/til</h4>
                    <p class="mt-3">fra pris</p>
                    <input class="form-control" type="number" id="PFra" min="0" name="PrisFra" value="" />
                    <p class="mt-3">til pris</p>
                    <input class="form-control" type="number" id="PTil" name="PrisTil" value="" />
                </div>
                <div class="form-group">
                    <h4>Distanc</h4>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="" type="radio" name="radiobtn1" id="Over" value="">

                            Over 10Km
                        </label><br />
                        <label class="form-check-label">
                            <input class="" type="radio" name="radiobtn2" id="Under" value="">

                            under 10Km
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <h4>Hvor i landet</h4>
                    <select class="form-control" name="region" id="region">
                        <option value="">Alle regioner</option>
                        <option value="Nordjylland">Nordjylland</option>
                        <option value="Midtjylland">Midtjylland</option>
                        <option value="Fyn">Fyn</option>
                        <option value="Sjælland">Sjælland</option>
                        <option value="Sydjylland">Sydjylland</option>
                    </select>
                    <input type="submit"   name="BtnSubmit" id="soeg" value="Søg" class="btn btn-dark MyLink mt-3" />
                </div>
            </form>


        </div>




     

        <div class="col-8" id="PrtialDiv">
                @if (Model != null)
                {
                    if (Model.Events == null || Model.Events.Count < 1)
                    {
                        <p>”Der er desværre ingen søge resultater” </p>

                    }
                    else
                    {<div id="events">
                            @if (Model.Events.Count > 0)
                            {<div class="row">
                                    @foreach (var item in Model.Events)
                                    {
                                        <div class="col-4">
                                            <div class="card">
                                                <img src="~/Content/EventImg/@item.EventImg" class="card-img-top" alt="...">
                                                <div class="card-body">
                                                    <h5 class="card-title">@item.EventTitle</h5>
                                                    <p class="card-text">@item.EventDato.ToString(" dd/MM/yyyy kl H: mm") </p>
                                                    <p class="card-text">@item.Rubrik</p>

                                                </div>
                                                <p class="pris"> pris:<strong>@item.Pris kr.</strong></p>
                                                <a href="/Home/VisEvent/@item.Id" class="MyLink " id="read">Læse mere</a>
                                            </div>
                                        </div>
                                    }
                                </div>

                            }
                        </div>
                    }






                }
            </div>
    </div>
</div>

