@model FinalEksamen.Models.SearchViewModel

@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container text-dark bg-light">
    @if (Model != null)
    {
    <div class="">
        <h2>Søg resultater</h2>
        <p>Du har søgt på: <b>@Request["Soegetxt"]</b> ...</p>
    </div>
        if (Model.Events == null && Model.Events.Count < 1 && Model.Medlems == null && Model.Medlems.Count < 1)
        {

            <p>Der var desværre ikke et match - prøv at søge på noget andet og mindre specifikt.</p>

        }
        else
        {
            <ul class="list-group bg-dark">

                @if (Model.Events.Count > 0 )

                {

                    <li class="list-group-item ">
                        <h4>din søgning resultater i <span class="resuheader"><a class="btn btn-link text-dark" href="~/Home/Events">Events</a></span></h4>

                        @foreach (var item in Model.Events)
                        {

                            <p class="text-dark">@item.EventTitle,@item.EventDato.ToString("dd-MM-yyyy kl HH-mm")</p>

                        }
                    </li>

                }
                @if (Model.Medlems.Count > 0)

                {

                    <li class="list-group-item">
                        <h4>din søgning resultater i <span class="resuheader"> <a class="btn btn-link text-dark" href="~/Home/KorteKurser">Kort kursus</a></span></h4>
                        @foreach (var item in Model.Medlems)
                        {

                            <div>
                                <h3>@item.MedlemName</h3>
                                <p>@item.BestyrelseRole.MedlemRole</p>
                                <p>@item.MedlemBeskrivelse</p>
                            </div>

                        }
                    </li>

                }
            </ul>
        }


    }
    else
    {
        <p>der er tkinsk fejl</p>
    }
</div>